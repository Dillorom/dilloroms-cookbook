<div class="container">
  <header><img src="images/lagmon1.png" class="img-responsive main-image"></header>
  <div class="col-md-8 col-md-offset-2">
    <h2>Welcome to Dillorom's Cookbook!</h2>


    <div class="content">
      <% if !logged_in? %>
        <p>Welcome!</p>
        <p><a href="/recipes">All Recipes</a></p>
        <p><a href="/login">Log In</a></p>
        <p><a href="/signup">Sign Up</a></p>
      <% else %>
        <p>Welcome, <%= current_user.username %>!</p>
        <p><a href="/recipes/new">Add Recipe</a></p>
        <p><a href="/recipes">All Recipes</a></p>
        <p><a href="/users">All Users</a></p>
        <p><a href="/logout">Log Out</a></p>
      <% end %>
    </div>

    <div class="sidebar">
      <h3>Ingredients</h3>
      <ul>
        <li><b>Ruby:</b> <%= RUBY_VERSION %></li>
        <li><b>Environment:</b> <%= ENV["RACK_ENV"] %></li>
        <li><b>Server:</b> <%= @env["SERVER_SOFTWARE"] %></li>
        <li><b>Port:</b> <%= @env["SERVER_PORT"] %></li>
      </ul>
    </div>

  </div>
</div>
